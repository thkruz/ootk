{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "./lib",
    "lib": ["esnext", "WebWorker"], 
    // "allowJs": true,
    "declaration": true,
    // "noImplicitAny": true,
    // "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "sourceMap": true,
    "listFiles": true,
