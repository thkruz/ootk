/**
 * This is the tsconfig extension that is used by the IDE.
 */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
}