{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "./dist",
    // "allowJs": true,
    "declaration": true,
    // "noImplicitAny": true,
    // "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    // "sourceMap": true,
    "listFiles": true,
    "newLine": "LF",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "types": []
  },
  "filesGlob": ["./src/**/*.ts", "./src/**/*.tsx", "!./src/**/*.d.ts", "./**/*.d.ts"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
